{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "aarch32-rpi-serial-usb-debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/target/rpi/kernel7.sym",
      "miDebuggerPath": "/opt/bolthur/sysroot/arm/bin/arm-bolthur-eabi-gdb",
      "miDebuggerArgs": "-q",
      "MIMode": "gdb",
      "cwd": "${workspaceFolder}/build/src/target/rpi/",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "description": "Enable GDB pretty printing"
        },
        {
          "text": "set architecture armv7",
          "description": "Set architecture"
        },
        {
          "text": "file ${workspaceFolder}/build/src/target/rpi/kernel7.sym",
          "description": "Loading symbol file"
        },
        {
          "text": "set serial baud 115200",
          "description": "Setting baud rate for serial connection"
        },
        {
          "text": "target remote /dev/ttyUSB0",
          "description": "Set remote target"
        }
      ]
    },
    {
      "name": "aarch32-rpi2-qemu-debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/target/rpi/kernel7_qemu.sym",
      "miDebuggerPath": "/opt/bolthur/sysroot/arm/bin/arm-bolthur-eabi-gdb",
      "miDebuggerArgs": "-q",
      "MIMode": "gdb",
      "cwd": "${workspaceFolder}/build/src/target/rpi/",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "description": "Enable GDB pretty printing"
        },
        {
          "text": "set architecture armv7",
          "description": "Set architecture"
        },
        {
          "text": "file ${workspaceFolder}/build/src/target/rpi/kernel7_qemu.sym",
          "description": "Loading symbol file"
        },
        {
          "text": "target remote | qemu-system-arm -M raspi2 -cpu cortex-a7 -no-reboot -kernel ${workspaceFolder}/build/src/target/rpi/kernel7_qemu.img -initrd ${workspaceFolder}/build-aux/platform/rpi/initrd -gdb stdio -S",
          "description": "Set target to remote with qemu"
        }
      ],
      "preLaunchTask": "compile",
      "logging": {
        "engineLogging": false,
        "exceptions": false,
        "moduleLoad": false,
        "programOutput": true,
        "trace": false,
        "traceResponse": false
      }
    },
    {
      "name": "aarch32-rpi-remote-qemu-debug",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/src/target/rpi/kernel7_qemu.sym",
      "miDebuggerPath": "/opt/bolthur/sysroot/arm/bin/arm-bolthur-eabi-gdb",
      "miDebuggerArgs": "-q",
      "MIMode": "gdb",
      "cwd": "${workspaceFolder}/build/src/target/rpi/",
      "setupCommands": [
        {
          "text": "-enable-pretty-printing",
          "description": "Enable GDB pretty printing"
        },
        {
          "text": "set verbose on",
          "description": "Enable verbose debugging output"
        },
        {
          "text": "set debug remote 1",
          "description": "Enable package output"
        },
        {
          "text": "set architecture armv7",
          "description": "Set architecture"
        },
        {
          "text": "file ${workspaceFolder}/build/src/target/rpi/kernel7_qemu.sym",
          "description": "Loading symbol file"
        },
        {
          "text": "set serial baud 115200",
          "description": "Setting baud rate for serial connection"
        },
        {
          "text": "target remote /dev/pts/1",
          "description": "Set remote target"
        }
      ],
      "logging": {
        "engineLogging": true,
        "exceptions": true,
        "moduleLoad": true,
        "programOutput": true,
        "trace": true,
        "traceResponse": true
      }
    }
  ]
}
