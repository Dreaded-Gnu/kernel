{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clean",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "args": [
        "clean"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "compile",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "qemu-rpi2",
      "type": "shell",
      "command": "qemu-system-arm -M raspi2 -cpu cortex-a7 -no-reboot -kernel src/platform/rpi/kernel.zwerg -s -S &",
      "options": {
        "cwd": "${workspaceFolder}/build"
      },
      "dependsOn": [
        "clean",
        "compile"
      ],
      "dependsOrder": "sequence"
    }
  ]
}
